{
  "packages": {
    ".": {
      "release-type": "simple",
      "draft": false,
      "changelog-path": "CHANGELOG.md",
      "changelog-sections": [
        { "type": "feat", "section": "Features", "hidden": false },
        { "type": "fix", "section": "Bug Fixes", "hidden": false },
        { "type": "chore", "section": "Miscellaneous", "hidden": false }
      ],
      "versioning": "always-bump-patch",
      "extra-files": [
        "README.md",
        {
          "type": "yaml",
          "path": "tasks/*.yaml",
          "glob": true
        },
        {
          "type": "yaml",
          "path": "**/zarf.yaml",
          "glob": true
        },
        {
          "type": "yaml",
          "path": "**/uds-bundle.yaml",
          "glob": true
        }
      ]
    }
  }
}
