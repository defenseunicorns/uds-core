{
  "name": "uds-core",
  "version": "0.2.0",
  "description": "A collection of capabilities for UDS Core",
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "pepr": {
    "name": "UDS Core",
    "uuid": "uds-core",
    "onError": "audit",
    "alwaysIgnore": {
      "namespaces": [],
      "labels": []
    }
  },
  "scripts": {
    "k3d-setup": "k3d cluster delete pepr-dev && k3d cluster create pepr-dev --k3s-arg '--debug@server:0'"
  },
  "dependencies": {
    "pepr": "0.16.0"
  },
  "devDependencies": {
    "typescript": "5.2.2"
  }
}
