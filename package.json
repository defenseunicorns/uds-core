{
  "name": "uds-core",
  "version": "0.6.0",
  "description": "A collection of capabilities for UDS Core",
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "pepr": {
    "name": "UDS Core",
    "uuid": "uds-core",
    "onError": "reject",
    "logLevel": "debug",
    "alwaysIgnore": {
      "namespaces": []
    },
    "env": {
      "PEPR_RESYNC_FAILURE_MAX": "20",
      "PEPR_RETRY_DELAY_SECONDS": "30"
    },
    "admission": {
      "alwaysIgnore": {
        "namespaces": [
          "zarf"
        ]
      }
    },
    "watch": {
      "alwaysIgnore": {
        "namespaces": [
          "zarf"
        ]
      }
    },
    "additionalWebhooks": [
      {
        "failurePolicy": "Ignore",
        "namespace": "istio-system"
      }
    ]
  },
  "scripts": {
    "k3d-setup": "k3d cluster delete pepr-dev && k3d cluster create pepr-dev --k3s-arg '--debug@server:0'",
    "test:unit": "vitest run src/pepr/"
  },
  "dependencies": {
    "pepr": "1.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.0",
    "globals": "^17.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "vitest": "^4.0.0"
  }
}
