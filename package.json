{
  "name": "uds-core",
  "version": "0.6.0",
  "description": "A collection of capabilities for UDS Core",
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "pepr": {
    "name": "UDS Core",
    "uuid": "uds-core",
    "onError": "reject",
    "logLevel": "info",
    "alwaysIgnore": {
      "namespaces": [
        "uds-dev-stack",
        "zarf"
      ],
      "labels": []
    }
  },
  "scripts": {
    "k3d-setup": "k3d cluster delete pepr-dev && k3d cluster create pepr-dev --k3s-arg '--debug@server:0'"
  },
  "dependencies": {
    "pepr": "0.51.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@jest/globals": "29.7.0",
    "@types/jest": "^29.5.14",
    "globals": "^16.2.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "16.1.0",
    "ts-jest": "29.3.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globalSetup": "./jest.setup.js",
    "globalTeardown": "./jest.teardown.js"
  }
}
