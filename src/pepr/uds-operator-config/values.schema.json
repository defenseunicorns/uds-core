{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "operator": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "KUBEAPI_CIDR": {
          "type": "string",
          "description": "Deprecated: CIDR for the Kubernetes API server."
        },
        "KUBENODE_CIDRS": {
          "type": "string",
          "description": "Deprecated: Comma separated list of CIDRs for Kubernetes nodes."
        },
        "AUTHSERVICE_REDIS_URI": {
          "type": "string",
          "description": "Redis URI for the auth service."
        }
      }
    },
    "cluster": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "attributes": {
          "type": "object",
          "properties": {
            "clusterName": { "type": "string", "description": "Name of the cluster." },
            "clusterTags": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Tags for the cluster."
            }
          }
        },
        "caBundle": {
          "type": "object",
          "properties": {
            "certs": {
              "type": "string",
              "description": "Contents of user provided CA bundle certificates."
            },
            "includeDoDCerts": {
              "type": ["boolean", "string"],
              "description": "Include DoD CA certificates in the bundle."
            },
            "includePublicCerts": {
              "type": ["boolean", "string"],
              "description": "Include public CA certificates in the bundle."
            }
          }
        },
        "expose": {
          "type": "object",
          "properties": {
            "domain": { "type": "string", "description": "Domain for cluster exposure." },
            "adminDomain": {
              "type": "string",
              "description": "Admin domain for cluster exposure."
            },
            "caCert": {
              "type": "string",
              "description": "Deprecated: CA certificate for cluster exposure. Use cluster.caBundle.certs instead."
            }
          }
        },
        "policy": {
          "type": "object",
          "properties": {
            "allowAllNsExemptions": {
              "type": ["boolean", "string"],
              "description": "Allow all namespace exemptions."
            }
          }
        },
        "networking": {
          "type": "object",
          "properties": {
            "kubeApiCIDR": {
              "type": "string",
              "description": "CIDR for Kubernetes API server."
            },
            "kubeNodeCIDRs": {
              "type": "array",
              "items": { "type": "string" },
              "description": "List of CIDRs for Kubernetes nodes."
            }
          }
        }
      }
    }
  }
}
