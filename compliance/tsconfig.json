{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["ES2022", "WebWorker"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "strict": true,
    "target": "ES2022",
    "useUnknownInCatchVariables": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["../src", "node_modules"]
}
